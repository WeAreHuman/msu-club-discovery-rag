# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=msu-clubs-index
PINECONE_NAMESPACE=clubs

# LLM Configuration (Choose one - Groq is FREE!)
# Groq (Recommended - FREE with generous limits)
GROQ_API_KEY=your_groq_api_key_here

# Anthropic Claude (Optional - PAID)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Provider: "groq" or "anthropic"
LLM_PROVIDER=groq

# Model Configuration
# For Groq: llama-3.3-70b-versatile, llama-3.1-8b-instant
# For Anthropic: claude-sonnet-4-5-20250929
LLM_MODEL=llama-3.3-70b-versatile

# Chunking Configuration
CHUNK_SIZE=300
CHUNK_OVERLAP=50

# Retrieval Configuration
TOP_K_RESULTS=5
